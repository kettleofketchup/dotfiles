
{ 
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "code-documentation@claude-code-workflows": true,
    "full-stack-orchestration@claude-code-workflows": true,
    "gopls-lsp@claude-plugins-official": true
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 -m cmd_checker",
            "workingDirectory": "/home/kettle/.claude/hooks",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "permissions": {
      "deny": [
        "Read(~/.ssh/*)",
        "Read(~/.git-credentials)",
        "Read(/etc/passwd)",
        "Read(/etc/shadow)",
        "Read(/etc/ssl/private/*)"
      ],
     "allow": [
      "Bash(find:*)",
      "Bash(git add:*)",

      "Bash(git commit:*)",
      "Bash(git check-ignore:*)",
      "Bash(git worktree add:*)",
      "Bash(git fetch:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git push:*)",
      "Bash(git worktree:*)",
      "Bash(git branch:*)",
      "Bash(git merge-base:*)",
      "Bash(git check-ignore -q .worktrees)",
      "Bash(git stash:*)",
      "Bash(git pull:*)",

      "Bash(go mod download:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(make build.hookshot:*)",
      "Skill(superpowers:writing-plans)",
      "Skill(superpowers:subagent-driven-development)",
      "Bash(go get:*)",
      "Bash(make:*)",
      "Bash(go vet:*)",
      "Bash(go fmt:*)",
      "Bash(go doc:*)",
      "Bash(grep:*)",
      "Bash(./bin/* *)",
      "Bash(npm create:*)",
      "Bash(node --version:*)",
      "Bash(npm --version:*)",
      "Bash(source ~/.nvm/nvm.sh)",
      "Bash(npm install:*)",
      "Bash(npx tailwindcss:*)",
      "Bash(./node_modules/.bin/tailwindcss:*)",
      "Bash(npm ls:*)",
      "Bash(npm run build:*)",
      "Bash(export NVM_DIR=\"$HOME/.nvm\")",
      "Bash([ -s \"$NVM_DIR/nvm.sh\" ])",
      "Bash(. \"$NVM_DIR/nvm.sh\")",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Skill(superpowers:finishing-a-development-branch)",
      "Bash(curl:*)",
      "Bash(go install:*)",
      "Bash(tar:*)",
      "Bash(sudo mv:*)",
      "Bash(glab:*)",
      "WebSearch",
      "Skill(superpowers:brainstorming)",
      "Bash(mkdir:*)",
      "Skill(superpowers:using-git-worktrees)",
      "Bash(docker compose:*)",
      "Bash(yamllint:*)",
      "Bash(python3:*)",
      "Bash(docker-compose:*)",
      "Bash(docker --version:*)",
      "Bash(docker network create:*)",
      "Bash(docker ps:*)",
      "Bash(pkill:*)",
      "Bash(chmod:*)",
      "Bash(docker network rm:*)",
      "Bash(docker stop:*)",
      "Bash(docker rm:*)",
      "Bash(ss:*)",
      "Bash(docker logs:*)",
      "Bash(docker exec:*)",
      "Bash(docker run:*)",
      "Bash(xxd:*)",
      "Bash(dos2unix:*)",
      "Bash(docker rmi:*)",
      "Bash(docker tag:*)",
      "Bash(docker build:*)",
      "Bash(docker images:*)",
      "Bash(docker inspect:*)"
  
    ]


  }

}
